@{
    Layout = "_Layout";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard - Code Academy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>

        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        :root {
            --primary-color: #4a90e2;
            --secondary-color: #f0f4f8;
            --accent-color: #357ABD;
            --text-color: #333;
            --card-bg: white;
            --btn-color: #4a90e2;
        }

        body {
            background-color: var(--secondary-color);
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 60px; /* Đẩy xuống dưới header */
            left: 0;
            background-color: rgb(24, 32, 43);
            padding-top: 20px;
            display: block;
            z-index: 1000;
        }

            .sidebar a {
                display: block;
                color: white;
                padding: 15px;
                text-decoration: none;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: var(--accent-color);
                }

        .main-content {
            flex-grow: 1; /* Đẩy footer xuống cuối */
            margin-left: 250px; /* Để tránh bị sidebar che */
            margin-top: 70px; /* Tránh bị header che */
            padding: 20px;
        }

        .dashboard-header {
            position: sticky;
            top: 0;
            width: 100%;
            background: var(--primary-color);
            color: white;
            padding: 10px 20px;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card {
            background: var(--card-bg);
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: 0.3s;
        }

            .card:hover {
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .card-header {
            background-color: var(--primary-color);
            color: white;
            font-weight: bold;
            text-align: center;
        }

        .btn-primary {
            background-color: var(--btn-color);
            border: none;
        }

            .btn-primary:hover {
                background-color: var(--accent-color);
            }

        .footer {
            background-color: var(--primary-color);
            color: white;
            text-align: center;
            padding: 5px 0; /* Giảm padding để footer nhỏ lại */
            font-size: 14px; /* Thu nhỏ chữ để footer gọn hơn */
            width: 100%;
            bottom: 0;
            left: 0;
        }


        .course-card img {
            width: 100%;
            border-radius: 8px;
        }

        .header-area {
            position: fixed; /* Cố định header */
            top: 0;
            left: 0;
            width: 100%;
            background: var(--primary-color);
            color: white;
            padding: 5px 0px;
            z-index: 1001; /* Đảm bảo header luôn trên sidebar */
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .course-card {
            margin-top: 0px;
        }

        .section {
            padding: 0px;
            margin-top: 0px;
        }

        .courses {
            margin-left: 250px; /* Add left margin to courses section */
            padding-top: 20px; /* Add padding to the top  */
        }

    </style>
</head>
<body>
    

    <div class="main-content">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Latest Announcements</div>
                    <div class="card-body">
                        <ul>
                            <li>New course on AI available now!</li>
                            <li>Live Q&A session this Friday.</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Resources</div>
                    <div class="card-body">
                        <ul>
                            <li><a href="#">Python Cheat Sheet</a></li>
                            <li><a href="#">Web Development Guide</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">My Courses</div>
                    <div class="card-body text-center">
                        <p>Enrolled: 3</p>
                        <a href="#" class="btn btn-primary">View Courses</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">Progress</div>
                    <div class="card-body text-center">
                        <p>Completed: 2/5</p>
                        <a href="#" class="btn btn-primary">Track Progress</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">Assignments</div>
                    <div class="card-body text-center">
                        <p>Pending: 1</p>
                        <a href="#" class="btn btn-primary">View Assignments</a>
                    </div>
                </div>
            </div>
        </div>

        <h3 class="mt-4">Latest Announcements</h3>
        <ul class="list-group">
            <li class="list-group-item">📢 New JavaScript Course Available!</li>
            <li class="list-group-item">⚡ Coding Contest this weekend, join now!</li>
            <li class="list-group-item">🎓 Certificate distribution for completed courses.</li>
        </ul>

        <h3 class="mt-4">Resources</h3>
        <ul class="list-group">
            <li class="list-group-item"><i class="fas fa-book"></i> JavaScript Basics - PDF</li>
            <li class="list-group-item"><i class="fas fa-video"></i> HTML & CSS Crash Course - Video</li>
            <li class="list-group-item"><i class="fas fa-link"></i> Python Cheat Sheet - Link</li>
        </ul>
    </div>

    <section class="section courses" id="courses">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="section-heading">
                        <h6>Latest Courses</h6>
                        <h2>Latest Courses</h2>
                    </div>
                </div>
            </div>
            <ul class="event_filter">
                <li>
                    <a class="is_active" href="#!" data-filter="*">Show All</a>
                </li>
                <li>
                    <a href="#!" data-filter=".design">Webdesign</a>
                </li>
                <li>
                    <a href="#!" data-filter=".development">Development</a>
                </li>
                <li>
                    <a href="#!" data-filter=".wordpress">Wordpress</a>
                </li>
            </ul>
            <div class="row event_box">
                <div class="col-lg-4 col-md-6 align-self-center mb-30 event_outer col-md-6 design">
                    <div class="events_item">
                        <div class="thumb">
                            <a href="#"><img src="~/assets/images/course-01.jpg" alt=""></a>
                            <span class="category">Webdesign</span>
                            <span class="price"><h6><em>$</em>160</h6></span>
                        </div>
                        <div class="down-content">
                            <span class="author">Stella Blair</span>
                            <h4>Learn Web Design</h4>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 align-self-center mb-30 event_outer col-md-6  development">
                    <div class="events_item">
                        <div class="thumb">
                            <a href="#"><img src="~/assets/images/course-02.jpg" alt=""></a>
