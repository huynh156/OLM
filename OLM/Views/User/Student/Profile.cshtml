@model OLM.ViewModels.UserVM

@{
    ViewData["Title"] = "Profile";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f7fc;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
        }

        .avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
        }

        .btn-primary {
            background-color: #0056b3;
            border: none;
        }

            .btn-primary:hover {
                background-color: #003f8a;
            }

        .sidebar {
            background-color: #ffffff;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        body {
            background-color: #f4f7fc;
        }

        .sidebar {
            background-color: #18202b;
            color: white;
            height: 100vh;
            padding-top: 20px;
        }

            .sidebar h4 {
                text-align: center;
            }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px;
            }

                .sidebar a:hover {
                    background-color: #1f2a38;
                }

        .card {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.15);
        }

        .navbar {
            background-color: #0056b3;
            padding: 10px;
        }

            .navbar a {
                color: white;
                text-decoration: none;
                padding: 10px;
            }

                .navbar a:hover {
                    background-color: #003f8a;
                    border-radius: 5px;
                }

        .btn-primary {
            background-color: #0056b3;
            border: none;
        }

            .btn-primary:hover {
                background-color: #003f8a;
            }
    </style>

</head>
<body>

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="#">EduPlatform</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Khóa học</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Liên hệ</a></li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#">@User.Identity.Name</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Logout" >Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar - Chỉ hiển thị khi đăng nhập -->
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="sidebar-sticky p-3">
                    <h4>Quản lý</h4>
                    <a href="#">Dashboard</a>
                    <a href="#">Khóa học của tôi</a>
                    <a href="#">Cài đặt</a>
                    <a href="#">Đăng xuất</a>
                </div>
            </nav>
            <!-- Main Content -->
            <div class="col-md-9">
                <div class="card p-4">
                    <div class="text-center mb-4">
                        <img src="/images/avatar.png" class="avatar" alt="User Avatar">
                        <h2 class="mt-2">@Model.FullName</h2>
                    </div>
                    <form asp-action="Edit">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Username" class="form-label"></label>
                                <input asp-for="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" disabled />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Role" class="form-label"></label>
                                <input asp-for="Role" class="form-control" disabled />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PhoneNumber" class="form-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Address" class="form-label"></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CreatedAt" class="form-label"></label>
                                <input asp-for="CreatedAt" class="form-control" disabled />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="StudentStatus" class="form-label"></label>
                                <input asp-for="StudentStatus" class="form-control" />
                                <span asp-validation-for="StudentStatus" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="/Account/ChangePassword" class="btn btn-link">Đổi mật khẩu</a>
                            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
